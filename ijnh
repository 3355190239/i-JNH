def get_token():
    global token
    print("\nğŸ”‘ æ­£åœ¨è·å– Token...")
    get_challenge_params = {
        "callback": f"jQuery_{int(time.time() * 1000)}",
        "username": username,
        "ip": ip,
        "_": int(time.time() * 1000),
    }
    res = requests.get(get_challenge_api, params=get_challenge_params, headers=header)
    data = json.loads(re.search(r'\((\{.*?\})\)', res.text).group(1))
    token = data['challenge']
    print(" âœ… Token è·å–æˆåŠŸ")
    print(" â”œâ”€ Token       :", token[:32] + "...")
    print(" â”œâ”€ IPåœ°å€      :", data.get('client_ip'))
    print(" â””â”€ æœ‰æ•ˆæ—¶é—´    :", data.get('expire'), "ç§’")

def do_complex_work():
    global i, hmd5, chksum
    i = "{SRBX1}" + get_base64(get_xencode(get_info(), token))
    hmd5 = get_md5(password, token)
    chksum = get_sha1(get_chksum())
    print("\nğŸ” åŠ å¯†å¤„ç†å®Œæˆ")
    print(" â”œâ”€ hmd5    :", hmd5[:16] + "...")
    print(" â”œâ”€ chksum  :", chksum[:16] + "...")
    print(" â””â”€ info    :", i[:32] + "...")

def login():
    print("\nğŸš€ æ­£åœ¨å°è¯•è®¤è¯ç™»å½•...")
    params = {
        'callback': f'jQuery_{int(time.time() * 1000)}',
        'action': 'login',
        'username': username,
        'password': '{MD5}' + hmd5,
        'ac_id': ac_id,
        'ip': ip,
        'chksum': chksum,
        'info': i,
        'n': n,
        'type': type,
        'os': 'windows+10',
        'name': 'windows',
        'double_stack': '0',
        '_': int(time.time() * 1000)
    }
    res = requests.get(srun_portal_api, params=params, headers=header)
    match = re.search(r'\((\{.*\})\)', res.text)
    if match:
        res_dict = json.loads(match.group(1))
        res = res_dict.get("res")
        error = res_dict.get("error")
        ip_addr = res_dict.get("client_ip") or res_dict.get("online_ip") or "æœªçŸ¥IP"
        if res == "ok" and error == "ok":
            print("âœ… ç™»å½•æˆåŠŸ")
            print(" â””â”€ IPåœ°å€: {}\n".format(ip_addr))
        else:
            print(" âŒ ç™»å½•å¤±è´¥")
            print(" â”œâ”€ é”™è¯¯ç±»å‹   :", error)
            print(" â”œâ”€ æç¤ºä¿¡æ¯   :", res_dict.get("error_msg"))
            print(" â””â”€ IPåœ°å€     :", ip_addr)
    else:
        print(" âš ï¸ æ— æ³•è§£æè¿”å›ç»“æœ")

